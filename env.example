# ===== RAG CONFIGURATION =====
EMBED_MODEL=text-embedding-3-large  # Options: text-embedding-3-small, text-embedding-3-large
CHUNK_SIZE=400  # Words per chunk
MIN_CHUNKS=3   
TOP_K=3                          # Number of chunks to retrieve (default: 6, increase for more context)
SIMILARITY_THRESHOLD=0.5          # Minimum similarity score 0-1 (default: 0.3, lower = more permissive)
RAG_CACHE_DIR=.rag_cache  # Directory to cache embeddings

# ===== KNOWLEDGE BASE =====
KNOWLEDGE_FILE=resource_document.txt  # Path to knowledge base document

# ===== LLM PROVIDER =====
LLM_PROVIDER=openai  # Options: openai, azure, gemini

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # Options: gpt-4o, gpt-4o-mini, gpt-4, gpt-3.5-turbo

# Azure OpenAI Configuration (if using azure provider)
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Google Gemini Configuration (if using gemini provider)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# ===== STT (Speech-to-Text) PROVIDER =====
STT_PROVIDER=soniox  # Options: soniox, deepgram, sarvam

# Soniox Configuration
SONIOX_API_KEY=your_soniox_api_key
SONIOX_MODEL=stt-rt-v3

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key

# Sarvam Configuration (for Indian languages)
SARVAM_API_KEY=your_sarvam_api_key

# ===== TTS (Text-to-Speech) PROVIDER =====
TTS_PROVIDER=murf  # Options: elevenlabs, cartesia, murf, sarvam, azure

# ElevenLabs Configuration
ELEVEN_LABS_API_KEY=your_elevenlabs_api_key

# Cartesia Configuration
CARTESIA_API_KEY=your_cartesia_api_key

# Murf Configuration
MURF_API_KEY=your_murf_api_key
MURF_VOICE_ID=samar  # Telugu voice
MURF_STYLE=Conversational
MURF_MODEL=FALCON

# Azure TTS Configuration
AZURE_API_KEY=your_azure_api_key
AZURE_REGION=eastus
AZURE_VOICE=te-IN-ShrutiNeural

# ===== TRANSPORT CONFIGURATION =====
TRANSPORT=webrtc  # Options: daily, webrtc

MIN_CHUNKS=5                      # Minimum chunks to return as fallback (default: 5)

# === Soniox STT Context Configuration ===
SONIOX_MAX_CONTEXT_TERMS=50       # Max terms to include in STT context (default: 50)
